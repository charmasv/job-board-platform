{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,

    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Useful for debugging
    "sourceMap": true,

    // Type Definitions
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
